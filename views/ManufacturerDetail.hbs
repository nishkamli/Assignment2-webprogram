<h1>Results for Manufacturer: {{Query}}</h1>
<div class="cards-container">
    {{#each records}}
   <div class="card">
        <div class="card-header">
            {{this.Manufacturer}}
        </div>
        <div class="card-body">
            <img src="{{this.image}}" alt="{{this.Manufacturer}}" width="200">
            <p>Class: {{this.class}}</p>
            <p>Sales (in thousands): {{this.Sales_in_thousands}}</p>
            <p>Year Resale Value: ${{this.__year_resale_value}}</p>
            <p>Vehicle Type: {{this.Vehicle_type}}</p>
            <p>Price: ${{this.Price_in_thousands}}</p>
        </div>
    </div>
    {{/each}}
</div>
